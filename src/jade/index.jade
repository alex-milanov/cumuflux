html
	head
		title CumuFlux - Personal Finances App
		link(rel="stylesheet",href="lib/font-awesome.css")
		link(rel="stylesheet",href="css/style.css")
	body

		header
			h1 CumuFlux - Personal Finances App
			ul.main-menu
				li: a Home
				li.active: a Transactions
				li: a Projections

		h3 Transactions Crud
		.transactions-crud
			form(method="POST")
				table.table
					thead: tr
						th(width="120") Type
						th Title
						th(width="250") Occuring
						th(width="120") Amount
						th(width="200") Actions
					tbody
					tfoot
						input(type="hidden",name="_id",value="")
						th(width="120"): select(name="type")
							option(value="expense") Expense
							option(value="income") Income
						th: input(name="title")
						th(width="250")
							select(name="occuring")
								option(value="once") Once
								option(value="daily") Daily
								option(value="weekly") Weekly
								option(value="monthly") Monthly
							input(name="recurrence.startingAt",type="date")
							input(name="recurrence.dayOfMonth",placeholder="Day Of Month",type="number")
							input(name="recurrence.dayOfWeek",placeholder="Day Of Week",type="number")
						th(width="120"): input(name="amount")
						th(width="200").actions
							button(type="submit") Save
							button.crud-reset-trigger(type="button",data-trigger-method="reset") Reset
		
		//- lib
		script(src="lib/jquery.js")
		script(src="lib/lodash.js")
		script(src="lib/moment.js")
		script(src="lib/q.js")

		//- iblokz
		script(src="js/iblokz/resource.js")
		script(src="js/iblokz/element.js")
		script(src="js/iblokz/crud.js")
		
		//- app
		script(src="js/cmf/resources/transactions.js")
		script(src="js/cmf/elements/transactions-crud.js")
		script(src="js/cmf/index.js")
		script(src="js/init.js")
