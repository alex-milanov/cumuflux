{
	"config": {
		"userRoles": ["admin","publisher","user"]
	},
	"collections": {
		"transactions": {
			"model": "Transaction",
			"schema": {
				"title" : "String",
				"type" : {"type": "String", "default": "expense"},
				"occuring" : {"type": "String", "default": "once"},
				"recurrence" : {
					"startingAt": "Date",
					"dayOfMonth": "Number",
					"dayOfWeek": "Number"
				},
				"amount" : {"type": "Number"},
				"createdAt" : {"type": "Date", "default": "Date.now"},
				"createdBy" : { "type": "ObjectId", "ref":"User", "required": false}
			},
			"plugins": [
				"mongoose-timestamp"
			]
		},
		"users": {
			"model": "User"
		}
	},
	"routes": {
		"api" : {
			"_meta": {
				"virtual": true,
				"crud": true,
				"contentType": "json"
			},
			"transactions": {},
			"users": {}
		}
	}
}